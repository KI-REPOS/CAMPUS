# Server
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:4200

# JWT
JWT_SECRET=change-this-secret
JWT_EXPIRE=7d

# MySQL
MYSQL_HOST=localhost
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password    # <--- PUT REAL VALUE
MYSQL_DATABASE=campus_web

# MongoDB
MONGODB_URI=mongodb://127.0.0.1:27017/campus-web

# Cloudflare R2
CLOUDFLARE_R2_ACCOUNT_ID=your-account-id           # <--- FROM CLOUDFLARE
CLOUDFLARE_R2_ACCESS_KEY_ID=your-access-key
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-secret-key
CLOUDFLARE_R2_BUCKET_NAME=campus-videos
CLOUDFLARE_R2_PUBLIC_URL=https://your-r2-public-domain

# Google Speech-to-Text
GOOGLE_PROJECT_ID=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=./config/google-credentials.json
# Place service account JSON at backend/config/google-credentials.json (gitignored)

# Gemini
GEMINI_API_KEY=your-gemini-api-key

# Google OAuth (email verification with Workspace)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_OAUTH_REDIRECT_URI=https://your-backend-url.onrender.com/api/auth/google/callback

# Allowed institutional domains
ALLOWED_EMAIL_DOMAINS=klu.ac.in,mlrit.ac.in

# Admin registration code
ADMIN_REGISTRATION_CODE=ADMIN_CAMPUS_2024
